datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String  @id @default(cuid())
  email String  @unique
  name  String?
  Post  Post[]
}

model Post {
  id     String @id @default(cuid())
  user   User   @relation(fields: [userId], references: [id])
  title  String
  body   String
  userId String
}
